@using EntityLayer.Concrete
@model List<Message>
@{
    ViewBag.Title = "Inbox";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">

    <!-- Content Wrapper. Contains page content -->
    <!-- Content Header (Page header) -->
    <section class="content-header">

        <div class="row mb-2">
            <div class="col-sm-6">
                <h1></h1>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            @Html.Action("WriterPanelPartial", "WriterPanelMessage")
            <!-- /.col -->
            <div class="col-md-9">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Gelen Mesajlar</h3>
                        <div class="card-tools">
                            <div class="input-group input-group-sm">
                                <input type="text" class="form-control" placeholder="Mail Kutusunda Ara">
                                <div class="input-group-append">
                                    <div class="btn btn-primary">
                                        <i class="fas fa-search"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-tools -->
                    </div>
                    <!-- /.card-header -->

                </div>
                <div class="table-responsive mailbox-messages">
                    <table class="table table-hover table-striped">
                        <tbody>

                            @foreach (var item in Model)
                            {
                                if (item.MessageStatus == true)
                                {
                                    <tr>

                                        <td>
                                            <div class="icheck-primary">
                                                <input type="checkbox" value="" id="check1">
                                                <label for="check1"></label>
                                            </div>
                                        </td>
                                        <td class="mailbox-name"><b>Gönderen:</b><a href="/WriterPanelMessage/GetInBoxMessageDetails/@item.MessageID"><b> @item.SenderMail</b></a></td>
                                        <td class="mailbox-subject">
                                            <b>@item.Subject</b>   -    <b>@item.MessageContent.Substring(0, 15)...</b>
                                        </td>
                                        <td class="mailbox-attachment"></td>
                                        <td class="mailbox-date"><b>@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</b></td>
                                    </tr>
                                }

                                else if (item.MessageStatus == false)
                                {
                                    <tr>

                                        <td>
                                            <div class="icheck-primary">
                                                <input type="checkbox" value="" id="check1">
                                                <label for="check1"></label>
                                            </div>
                                        </td>
                                        <td class="mailbox-name">Gönderen:<a href="/WriterPanelMessage/GetInBoxMessageDetails/@item.MessageID"> @item.SenderMail</a></td>
                                        <td class="mailbox-subject">
                                            @item.Subject   -    @item.MessageContent.Substring(0, 15)...
                                        </td>
                                        <td class="mailbox-attachment"></td>
                                        <td class="mailbox-date">@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    <!-- /.table -->
                </div>
                <!-- /.mail-box-messages -->
            </div>
            <!-- /.card-body -->

        </div>
        <!-- /.card -->
        </div>
        <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>

</body>
</html>